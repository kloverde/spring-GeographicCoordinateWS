<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
   targetNamespace="https://www.github.com/kloverde/spring-GeographicCoordinateWS"
   xmlns:kl="https://www.github.com/kloverde/spring-GeographicCoordinateWS">

   <xs:include schemaLocation="DistanceUnit.xsd"/>
   <xs:include schemaLocation="Point.xsd"></xs:include>

   <xs:element name="DistanceRequest">
      <xs:complexType>
         <xs:sequence>
            <xs:element name="unit" type="kl:distanceUnit" minOccurs="1" maxOccurs="1"/>
            <xs:element name="points" minOccurs="1" maxOccurs="1">
               <xs:complexType>
                  <xs:sequence>
                     <xs:element ref="kl:point" minOccurs="2" maxOccurs="unbounded"/>
                  </xs:sequence>
               </xs:complexType>
            </xs:element>
         </xs:sequence>
      </xs:complexType>
   </xs:element>

</xs:schema>
